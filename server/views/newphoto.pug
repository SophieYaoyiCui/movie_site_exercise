
h2 upload a photo

.row
   .col-mad-6.col-md-offset-3
      if flashMsg.length > 0
        .alert.alert-danger <strong>FLASH!</strong>#{flashMsg}
      form(method="post" action="/express" enctype="multipart/form-data")
        div.form-group
          label(for='title') Photo Title:
          input#title.form-control(type='text', placeholder='photo title is required' name='title')         
        div.form-group
          label(for='description') Description:
          input#description.form-control(type='text', placeholder='description is optional' name='description')
        div.form-group
          label(for='resort') Resort Name:
          input#resort.form-control(type='text', placeholder='resort is required' name='resort')
        div.form-group
          label(for='date') Photo taken on:
          input#date.form-control(type='date', name='date')
        div.form-group
          label(for='image') Image:
          input#image.form-control(type='file', name='image')
        p
          button.btn.btn-primary(type='submit') Post Your Photo